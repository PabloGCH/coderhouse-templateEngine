<h2 class="mt-4">Products</h2>
<% if(data.products.length != 0) {%>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Price</th>
			</tr>
		</thead>
		<tbody>
			<% data.products.forEach(el => {%>
				<tr>
					<td><%- el.name%></td>
					<td><%- el.price%></td>
					<td>
						<img src=<%- el.imgUrl%> class="table-img"></img>
					</td>
				</tr>
			<% })%>
		</tbody>

	</table>
<% } %>

<% if(data.products == 0) {%>
	<p>No products available</p>
<% } %>
